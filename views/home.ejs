<%- include("partials/header"); -%>

<h1>Home</h1>

<p class="justifythispara"><%=startingContent%></p>

<% postArr.forEach(function(post){ %>
<h1><%= post.title %></h1>
<% if(post.description.length > 100) {%>
<p class="justifythispara"><%= (post.description.substring(0, 100) + " ... ") %><a href="/posts/<%= post._id %>">Read More</a></p>
<% } else { %>
<p class="justifythispara"><%= post.description %>
<% }}); %>

<%- include("partials/footer") -%>
